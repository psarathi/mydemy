{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Mydemy",
  "version": "1.0.0",
  "identifier": "com.mydemy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "TAURI_BUILD=true npm run build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../out/courses.json"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "Mydemy",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1024,
        "minHeight": 768,
        "devtools": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/*", "$RESOURCE/*"]
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [],
      "dialog": true,
      "pubkey": ""
    }
  }
}
